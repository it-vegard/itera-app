<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              style="@style/Itera.CourseList.List.Course">

  <TextView
      android:id="@+id/course_list_course_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?attr/textAppearanceListItem"
      android:text="Course Title"
      style="@style/Itera.CourseList.List.Course.Title"/>

  <TextView
      android:id="@+id/course_list_course_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?attr/textAppearanceListItem"
      android:text="Description: Lorem ipsum..."
      style="@style/Itera.CourseList.List.Course.Description"/>
</LinearLayout>
