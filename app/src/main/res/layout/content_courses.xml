<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.events.courselist.CourseListActivity"
    tools:showIn="@layout/app_bar_courses">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:id="@+id/course_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/course_list_title"
        style="@style/Itera.CourseList.ListTitle"/>

    <fragment
        android:name="no.itera.app.makeadifference.activities.events.courselist.CourseListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_list"
        tools:layout="@layout/fragment_course_list"/>
  </LinearLayout>

</RelativeLayout>
