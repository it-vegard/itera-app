<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/iteraPrimary</item>
    <item name="colorPrimaryDark">@color/iteraSecondary</item>
    <item name="colorAccent">@color/iteraPrimary</item>
    <item name="android:searchViewStyle">@style/AppTheme.SearchView</item>
    <item name="android:editTextColor">@color/iteraTextDark</item>
    <item name="android:textColorHint">@color/iteraTextDark</item>
    <item name="android:textColor">@color/iteraTextDark</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="Itera"/>

  <style name="Itera.CourseList">
    <item name="android:textColor">@color/iteraTextDark</item>
  </style>

  <style name="Itera.CourseList.ListTitle">
    <item name="android:layout_marginTop">@dimen/courses_list_title_margin_vertical</item>
    <item name="android:layout_marginBottom">@dimen/courses_list_title_margin_vertical</item>
    <item name="android:background">@color/iteraForegroundPrimary</item>
    <item name="android:textColor">@color/iteraTextLight</item>
    <item name="android:textSize">@dimen/sub_title_size</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingTop">@dimen/courses_list_title_padding_vertical</item>
    <item name="android:paddingBottom">@dimen/courses_list_title_padding_vertical</item>
    <item name="android:paddingStart">@dimen/courses_list_title_padding_horizontal</item>
    <item name="android:paddingEnd">@dimen/courses_list_title_padding_horizontal</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="Itera.CourseList.List"/>

  <style name="Itera.CourseList.List.Course"/>

  <style name="Itera.CourseList.List.Course.Container">
    <item name="android:layout_marginTop">@dimen/courses_list_item_padding_vertical</item>
    <item name="android:layout_marginRight">@dimen/courses_list_item_padding_horizontal</item>
    <item name="android:layout_marginBottom">@dimen/courses_list_item_padding_vertical</item>
    <item name="android:layout_marginLeft">@dimen/courses_list_item_padding_horizontal</item>
  </style>

  <style name="Itera.CourseList.List.Course.Title">
    <item name="android:textSize">@dimen/sub_title_size</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Itera.CourseList.List.Course.Date">
    <item name="android:textStyle">italic</item>
  </style>

  <style name="Itera.CourseList.List.Course.Description">
    <item name="android:textStyle">italic</item>
  </style>

  <style name="Itera.Course"/>

  <style name="Itera.Course.Title">
    <item name="android:textSize">@dimen/title_size</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginBottom">@dimen/course_title_margin_bottom</item>
  </style>

  <style name="Itera.Course.Description">
    <item name="android:textSize">@dimen/text_size</item>
    <item name="android:layout_marginBottom">@dimen/course_description_margin_bottom</item>
  </style>

  <style name="Itera.Button">
    <item name="android:paddingTop">15dp</item>
    <item name="android:paddingRight">25dp</item>
    <item name="android:paddingBottom">15dp</item>
    <item name="android:paddingLeft">25dp</item>
  </style>

  <style name="Itera.Button.Create" parent="Itera.Button">
    <item name="android:background">@color/iteraForegroundPrimary</item>
    <item name="android:textColor">@color/iteraTextLight</item>
  </style>

  <style name="Itera.Button.Delete" parent="Itera.Button">
    <item name="android:background">@color/iteraForegroundPrimary</item>
    <item name="android:textColor">@color/iteraTextLight</item>
  </style>

  <style name="Itera.Label">
    <item name="android:textColor">@color/iteraTextDark</item>
    <item name="android:textSize">@dimen/search_drawer_label_size</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
  </style>

  <style name="Itera.Label.Large">
    <item name="android:layout_marginTop">40dp</item>
    <item name="android:textSize">@dimen/search_drawer_label_size_large</item>
  </style>

  <style name="Itera.Checkbox">
    <item name="android:textColor">@color/iteraTextDark</item>
    <item name="android:theme">@android:style/Theme.Material.Light</item>
  </style>

  <!-- Search drawer -->

  <style name="Itera.Search">
    <item name="android:textColor">@color/iteraTextDark</item>
    <item name="android:layout_marginTop">@dimen/default_padding_vertical</item>
  </style>

  <style name="Itera.SearchBar">
    <item name="android:textColor">@color/iteraTextDark</item>
    <item name="android:color">@color/iteraTextDark</item>
    <item name="searchIcon">@drawable/ic_search_black_24dp</item>
  </style>

  <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
    <item name="android:searchIcon">@drawable/ic_search_black_24dp</item>
    <item name="android:closeIcon">@drawable/ic_clear_black_24dp</item>
    <item name="android:textColor">@color/iteraTextDark</item>
    <item name="android:queryHint">@string/search_drawer_search_hint</item>
    <item name="android:textColorHint">@color/iteraTextDark</item>
    <item name="android:iconifiedByDefault">false</item>
  </style>

  <style name="Itera.Search.Filter">
    <item name="android:paddingLeft">@dimen/default_padding_horizontal</item>
  </style>

  <style name="Itera.Search.Label" parent="Itera.Label"/>
  <style name="Itera.Search.Label.Large" parent="Itera.Label.Large"/>
  
</resources>
